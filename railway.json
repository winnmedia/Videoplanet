{
  "$schema": "https://railway.com/railway.schema.json",
  "build": {
    "builder": "RAILPACK"
  },
  "deploy": {
    "startCommand": "cd vridge_back && export PYTHONPATH=/app/vridge_back:$PYTHONPATH && python manage.py migrate --noinput && python -m gunicorn config.asgi:application -k uvicorn.workers.UvicornWorker -b 0.0.0.0:${PORT:-8000}",
    "healthcheckPath": "/health/",
    "healthcheckTimeout": 120,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  },
  "environments": {
    "production": {
      "variables": {
        "DJANGO_SETTINGS_MODULE": "config.settings",
        "DEBUG": "False",
        "PYTHONPATH": "/app/vridge_back",
        "PYTHONUNBUFFERED": "1",
        "PIP_DISABLE_PIP_VERSION_CHECK": "1",
        "PYTHON_VERSION": "3.11",
        "ALLOWED_HOSTS": "*",
        "PORT": "8000"
      }
    }
  }
}