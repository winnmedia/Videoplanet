{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "pip install poetry && poetry install --no-dev"
  },
  "deploy": {
    "startCommand": "python manage.py migrate && python manage.py collectstatic --noinput && daphne -b 0.0.0.0 -p $PORT config.asgi:application",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 3,
    "healthcheckPath": "/health/",
    "healthcheckTimeout": 30
  },
  "environments": {
    "production": {
      "domain": "videoplanet-api.railway.app",
      "variables": {
        "DJANGO_SETTINGS_MODULE": "config.settings",
        "PYTHON_VERSION": "3.9",
        "ALLOWED_HOSTS": "videoplanet-api.railway.app,api.videoplanet.com",
        "CORS_ALLOWED_ORIGINS": "https://videoplanet.com,https://www.videoplanet.com,https://videoplanet.vercel.app",
        "DEBUG": "False",
        "USE_S3": "True"
      }
    },
    "staging": {
      "domain": "videoplanet-api-staging.railway.app",
      "variables": {
        "DJANGO_SETTINGS_MODULE": "config.settings",
        "PYTHON_VERSION": "3.9",
        "ALLOWED_HOSTS": "videoplanet-api-staging.railway.app",
        "CORS_ALLOWED_ORIGINS": "https://videoplanet-staging.vercel.app",
        "DEBUG": "False",
        "USE_S3": "True"
      }
    }
  }
}