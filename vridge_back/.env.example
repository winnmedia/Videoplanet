# Railway Environment Variables Example
# Copy this file to .env and fill in your values

# Django Settings
SECRET_KEY=your-secret-key-here
DEBUG=False
DJANGO_SETTINGS_MODULE=config.settings_production

# Database (Railway provides DATABASE_URL automatically)
# DATABASE_URL=postgresql://user:password@host:port/dbname

# Redis (Railway provides REDIS_URL if you add Redis service)
# REDIS_URL=redis://localhost:6379

# Allowed Hosts (comma-separated)
ALLOWED_HOSTS=your-domain.railway.app,localhost,127.0.0.1

# CORS Origins (comma-separated)
CORS_ALLOWED_ORIGINS=https://your-frontend.vercel.app,http://localhost:3000

# Email Configuration (Optional)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
EMAIL_USE_TLS=True

# SendGrid (Optional, if using SendGrid instead of SMTP)
# SENDGRID_API_KEY=your-sendgrid-api-key
# DEFAULT_FROM_EMAIL=noreply@yourdomain.com
# DEFAULT_FROM_NAME=YourAppName

# Sentry (Optional)
# SENTRY_DSN=your-sentry-dsn

# Django Superuser (Optional, for automatic creation)
DJANGO_SUPERUSER_USERNAME=admin
DJANGO_SUPERUSER_EMAIL=admin@example.com
DJANGO_SUPERUSER_PASSWORD=change-this-password

# Logging
LOG_LEVEL=INFO
DJANGO_LOG_LEVEL=INFO

# Application Version
APP_VERSION=1.0.0